    <formulas>
        <description>CHA _ {YYYY] {MMM} _ {compte} _ {ville} _ {type relation chantier}
où {MMM} correspond aux 3 premières lettres du mois en majuscules (ou 4 pour JUIN et JUILLET)</description>
        <name>NomChantierFormula</name>
        <dataType>String</dataType>
        <expression>LEFT(&quot;CHA _ &quot; + 
TEXT(YEAR(TODAY())) + &quot; &quot; +
CASE(MONTH(TODAY()), 1, &quot;JAN&quot;,
2, &quot;FEV&quot;, 3, &quot;MAR&quot;, 4, &quot;AVR&quot;,  5, &quot;MAI&quot;, 
6, &quot;JUIN&quot;, 7, &quot;JUIL&quot;, 8, &quot;AOU&quot;, 9, &quot;SEP&quot;, 10, &quot;OCT&quot;,
11, &quot;NOV&quot;, 12, &quot;DEC&quot;, &quot;N/A&quot;) + &quot; _ &quot; + 
{!Get_Account.Name} + &quot; _ &quot; + 
{!Get_Account.ville__c} + &quot; _ &quot; + 
&quot;Propriétaire&quot;, 80)</expression>
    </formulas>
    <formulas>
        <name>NomChantierTruncated</name>
        <dataType>String</dataType>
        <expression>LEFT({!Nom_du_chantier}, 80)</expression>
    </formulas>
    <formulas>
        <name>SalesEntity</name>
        <dataType>String</dataType>
        <expression>IF({!Get_Account.IsPersonAccount},
{!Get_Account.personSalesEntity__pc},
{!Get_Account.billingSalesEntity__c})</expression>
    </formulas>
    <formulas>
        <name>ServiceEntity</name>
        <dataType>String</dataType>
        <expression>IF({!Get_Account.IsPersonAccount},
{!Get_Account.personServiceEntity__pc},
{!Get_Account.billingServiceEntity__c})</expression>
    </formulas>
