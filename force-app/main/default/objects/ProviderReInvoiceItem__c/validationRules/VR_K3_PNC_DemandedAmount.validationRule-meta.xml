<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VR_K3_PNC_DemandedAmount</fullName>
    <active>true</active>
    <description>Montant obligatoire et strictement supérieure à 0</description>
    <errorConditionFormula>$User.ByPassValidationRule__c = false &amp;&amp;
$Setup.rh2__PS_Settings__c.rh2__Run_Validation_Rule__c &amp;&amp;
demandedAmount__c &lt;= 0</errorConditionFormula>
    <errorDisplayField>demandedAmount__c</errorDisplayField>
    <errorMessage>Montant demandé invalide (doit être renseigné et strictement supérieure à 0)!</errorMessage>
</ValidationRule>
